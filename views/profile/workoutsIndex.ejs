<%- include('../partials/nav') %>

<h1 class="workouts-title"><%= title %> </h1>

<% if (user?.profile) { %>
  <div class="workout-container">

    <form class="workout-form" action="/profile/<%=user?.profile._id%>/workouts" method="post" autocomplete="off">
      <input type="text" name="name" placeholder="Name" required>
      <input type="number" placeholder="Duration" name="duration" required>
      <input type="number" placeholder="Average Heart Rate" name="heartRateAvg">
      <button type="submit">Add Workout</button>
    </form>
    
  </div>
<% } %>




  


